{
  "compilerOptions": {
    /* Basic Options */
    "target": "es3",
    "module": "none",
    "lib": ["es5","es2015.promise","es2015.iterable"],                             /* Specify library files to be included in the compilation. */
    "allowJs": false,
    "outDir": "./build/",
    "rootDir": "./src",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    // "types": [],
    "esModuleInterop": true
  },
  "include": [
      "src"
  ]
}
