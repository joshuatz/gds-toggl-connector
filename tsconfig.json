{
    "compilerOptions": {
      /* Basic Options */
      "target": "es3",
      "module": "amd",
      "lib": ["es5","es2015.promise","es2015.iterable"],                             /* Specify library files to be included in the compilation. */
      "allowJs": false,
      "outFile": "./build/main.js",
      "rootDir": "./intermediate-final",
      "types": [
          "@types/google-apps-script",
          "@types/jest"
      ],
  
      /* Strict Type-Checking Options */
      "strict": true,
  
      /* Module Resolution Options */
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include": [
        "intermediate-final"
    ]
  }  